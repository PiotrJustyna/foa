{erl_opts, [debug_info]}.
{deps,
    [
      {cowboy,  "2.4.0"},
      {uuid_erl, "1.7.3"},
      {jsx, "2.9.0"}
    ]
}.

{relx, [{release, {"foa", "0.1.0"}, [foa]},
        {vm_args, "config/vm.args"},
        {sys_config, "config/sys.config"},
        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true}
    ]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true},
                            {include_src, false}]}]}
           ]}.

{shell, [
    {apps, [foa]}
]}.
